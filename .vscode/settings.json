    "json.schemas": [
        {
            "fileMatch": [
                "/lib/database/json/*/*.json"
            ],
            "url": "/lib/database/schema.entry.json"
        },
        {
            "fileMatch": [
                "/lib/database/list.json"
            ],
            "url": "/lib/database/schema.list.json"
        }
    ],
    "cSpell.words": [
        "hant",
        "zh",
        "zh hant",
        "Ryuuganime",
        "hjson",
        "kitsu",
        "romaji",
        "ryuuganime",
        "script",
        "title",
    ],
